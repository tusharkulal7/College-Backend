# App
PORT=3000
NODE_ENV=development

# Database
# You can set either DATABASE_URL or MONGODB_URI; both are supported by the code.
DATABASE_URL=
MONGODB_URI=

# Auth / Secrets
JWT_SECRET=
CLERK_API_KEY=

# Cloud providers
CLOUDINARY_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=

# Caching / Queues
REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
# Redis connection retry settings
REDIS_CONN_RETRY_ATTEMPTS=5
REDIS_CONN_RETRY_DELAY_MS=2000
REDIS_CONNECT_TIMEOUT_MS=10000

# Bull (job queue) defaults
BULL_DEFAULT_RETRIES=3
BULL_DEFAULT_BACKOFF_MS=5000
BULL_DEFAULT_CONCURRENCY=5
BULL_CLOSE_TIMEOUT_MS=5000

# Search
ELASTICSEARCH_URL=
ELASTICSEARCH_INDEX_PREFIX=
ELASTICSEARCH_SHARDS=1
ELASTICSEARCH_REPLICAS=1

# Third-party services
SENTRY_DSN=
SENDGRID_API_KEY=
STRIPE_SECRET_KEY=
